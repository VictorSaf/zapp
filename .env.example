# =================================
# ZAEUS Environment Variables
# =================================

# Database Configuration
DATABASE_URL=postgresql://zaeus_user:zaeus_password@localhost:5432/zaeus_db
POSTGRES_DB=zaeus_db
POSTGRES_USER=zaeus_user
POSTGRES_PASSWORD=zaeus_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# API Service Configuration (Port 3000)
API_PORT=3000
API_HOST=localhost
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AI Orchestrator Service Configuration (Port 3001)
AI_ORCHESTRATOR_PORT=3001
AI_ORCHESTRATOR_HOST=localhost

# Ollama Configuration (Local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI Configuration (Expert Mode)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# Claude Configuration (Expert Mode)
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# Encryption Keys (Generate new ones for production!)
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_IV=your-16-character-iv-key

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000

# Development Tools
PGADMIN_EMAIL=admin@zaeus.dev
PGADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_2FA=false
ENABLE_VOICE_INPUT=false
ENABLE_EXPERT_MODE=true
ENABLE_ANALYTICS=true

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,json